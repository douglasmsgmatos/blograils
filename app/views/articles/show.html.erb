
<article class="blog-post">
    <h2 class="blog-post-title"><%= @article.title %></h2>
    <p class="blog-post-meta"> <%= date_create(@article.created_at) %><a href="#"></a></p>

    <p><%= @article.body %></p>

    <%= link_to "Back", root_path, class: 'btn btn-outline-secondary' %>
    <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-outline-secondary' %>
    <%= link_to "Destroy", article_path(@article), 
            method: :delete, 
            data: { confirm: "Are you sure ?" }, class: 'btn btn-outline-danger' %>

    <h2>Comments</h2>
    <%= render @article.comments %>

    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
</article>










